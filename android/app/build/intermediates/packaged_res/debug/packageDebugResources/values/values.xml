<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorAccent">#8b5cf6</color>
    <color name="colorBackground">#0f172a</color>
    <color name="colorBackgroundLight">#f8fafc</color>
    <color name="colorError">#ef4444</color>
    <color name="colorInfo">#3b82f6</color>
    <color name="colorNavigationBar">#0f172a</color>
    <color name="colorNavigationBarLight">#ffffff</color>
    <color name="colorOnBackground">#f1f5f9</color>
    <color name="colorOnBackgroundLight">#0f172a</color>
    <color name="colorOnPrimary">#ffffff</color>
    <color name="colorOnSurface">#e2e8f0</color>
    <color name="colorOnSurfaceLight">#334155</color>
    <color name="colorPrimary">#6366f1</color>
    <color name="colorPrimaryDark">#4f46e5</color>
    <color name="colorPrimaryLight">#818cf8</color>
    <color name="colorStatusBar">#0f172a</color>
    <color name="colorStatusBarLight">#ffffff</color>
    <color name="colorSuccess">#22c55e</color>
    <color name="colorSurface">#1e293b</color>
    <color name="colorSurfaceLight">#ffffff</color>
    <color name="colorWarning">#f59e0b</color>
    <color name="ic_launcher_background">#0f172a</color>
    <color name="splashBackground">#0f172a</color>
    <color name="splashSpinner">#6366f1</color>
    <string name="app_name">Alito Mantenimiento</string>
    <string name="custom_url_scheme">com.alito.mantenimiento</string>
    <string name="package_name">com.alito.mantenimiento</string>
    <string name="title_activity_main">Alito Mantenimiento</string>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
        <item name="windowSplashScreenBackground">@color/colorBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>